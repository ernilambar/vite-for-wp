{
	"name": "@kucrut/vite-for-wp",
	"version": "0.5.2",
	"description": "Vite integration for WordPress plugins and themes development.",
	"author": "Dzikri Aziz",
	"license": "MIT",
	"packageManager": "pnpm@7.9.3",
	"main": "./index.cjs",
	"module": "./index.mjs",
	"types": "./index.d.ts",
	"homepage": "https://github.com/kucrut/vite-for-wp",
	"repository": {
		"type": "git",
		"url": "https://github.com/kucrut/vite-for-wp.git"
	},
	"bugs": {
		"url": "https://github.com/kucrut/vite-for-wp/issues"
	},
	"keywords": [
		"vite",
		"wordpress"
	],
	"devDependencies": {
		"@babel/core": "^7.20.5",
		"@changesets/cli": "^2.25.2",
		"@types/node": "^18.11.15",
		"@typescript-eslint/eslint-plugin": "^5.46.1",
		"@typescript-eslint/parser": "^5.46.1",
		"@wordpress/eslint-plugin": "^13.6.0",
		"eslint": "^8.29.0",
		"eslint-plugin-prettier": "^4.2.1",
		"prettier": "npm:wp-prettier@^2.6.2",
		"typescript": "^4.9.4",
		"vite": "^4.0.1"
	},
	"peerDependencies": {
		"vite": "^4.0.1"
	},
	"exports": {
		".": {
			"import": "./index.mjs",
			"require": "./index.cjs",
			"types": "./index.d.ts"
		},
		"./plugins": {
			"import": "./plugins/index.mjs",
			"require": "./plugins/index.cjs",
			"types": "./plugins/index.d.ts"
		},
		"./utils": {
			"import": "./utils/index.mjs",
			"require": "./utils/index.cjs",
			"types": "./utils/index.d.ts"
		}
	},
	"files": [
		"index.*",
		"plugins",
		"shared",
		"utils"
	],
	"scripts": {
		"build": "unbuild",
		"dev": "unbuild --stub",
		"eslint:check": "eslint --ext .cjs,.js,.ts .",
		"prettier:check": "prettier --check .",
		"lint": "npm run prettier:check && npm run eslint:check",
		"release": "changeset publish"
	}
}
